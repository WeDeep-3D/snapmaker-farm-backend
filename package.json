{
  "name": "snapmaker-farm-backend",
  "version": "1.0.50",
  "type": "module",
  "module": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "docker-dev:create": "docker compose -f compose.dev.yaml up --build --force-recreate -d",
    "docker-dev:up": "docker compose -f compose.dev.yaml up -d",
    "docker-dev:stop": "docker compose -f compose.dev.yaml down",
    "docker-dev:remove": "docker compose -f compose.dev.yaml down -v",
    "docker-dev:recreate": "bun docker-dev:remove && bun docker-dev:create",
    "migration:generate": "bun --bun drizzle-kit generate --config ./drizzle.config.ts",
    "migration:check": "bun migration:generate && bun --bun drizzle-kit check --config ./drizzle.config.ts",
    "migration:apply": "bun migration:check && bun --bun drizzle-kit migrate --config ./drizzle.config.ts",
    "migration:pull": "bun --bun drizzle-kit pull --config ./drizzle.config.ts",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/static": "^1.4.7",
    "@elysiajs/swagger": "^1.3.1",
    "@yolk-oss/elysia-env": "^3.0.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.4.21",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.5",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.52.0"
  },
  "overrides": {
    "@sinclair/typebox": ">= 0.34.0 < 1"
  }
}
